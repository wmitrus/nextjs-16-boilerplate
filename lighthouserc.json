{
  "ci": {
    "collect": {
      "numberOfRuns": 3
    },
    "upload": {
      "target": "lhci",
      "serverBaseUrl": "${LHCI_SERVER_BASE_URL}",
      "token": "${LHCI_TOKEN}"
    },
    "assert": {
      "assertions": {
        "categories:performance": ["error", { "minScore": 0.2 }],
        "categories:accessibility": ["warn", { "minScore": 0.2 }],
        "categories:seo": ["warn", { "minScore": 0.2 }],
        "unused-javascript": ["warn", { "maxLength": 20 }],
        "legacy-javascript": ["warn", { "maxLength": 20 }],
        "bf-cache": "off"
      }
    }
  }
}
